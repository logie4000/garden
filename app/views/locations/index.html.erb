<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Calendar</th>
      <th>Auto water</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= image_tag(location.portrait.file.thumb.url) unless (location.portrait.nil?) %>
        <td><%= link_to(location.name, location) %></td>
        <td><%= calendar_link(location.calendar) %></td>
        <td><%= location.auto_water %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <% if (@current_user && @current_user.is_admin?) %>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

