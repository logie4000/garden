<% right_width = crop.days_to_maturity %>
<% left_width = seeding_offset(crop) %>

<% padding = (crop.get_start_datetime() - growing_season_start).to_i %>
<% total_width = right_width + left_width + padding %>
<% max_width = (growing_season_end - crop.get_start_datetime()) + padding %>
<% total_width = max_width if (total_width > max_width) %>
<% title ||= crop.name %>

<%= render :partial => "shared/planningBar2", :locals => {:start_date => crop.get_start_datetime(), :total_width => total_width, :padding =>  padding, :left_width => left_width, :right_width => right_width, :title => title } %>
