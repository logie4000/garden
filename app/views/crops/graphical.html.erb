<p id="notice"><%= notice %></p>

<h1>Graphical Crops</h1>
<b><%= link_to("List", crops_path) %> | <%= link_to 'New Crop', new_crop_path %></b>

<% scale = 5 %>
<% growing_season_start = DateTime.new(2018, 3, 1) %>
<% growing_season_end = DateTime.new(2018, 8, 31) %>

 <table>
    <% @crops.each do |crop| %>
      <% next if crop.get_start_datetime() > growing_season_end %>
      <tr><td>
        <%= render :partial => "growth_chart", :locals => {:crop => crop, :growing_season_start => growing_season_start, :growing_season_end => growing_season_end} %>
      </td></tr>
    <% end %>
  </table>
<br>

<%= link_to 'New Crop', new_crop_path %>
