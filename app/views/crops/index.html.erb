<p id="notice"><%= notice %></p>

<h1>Crops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Transplant</th>
      <th>Transplant date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= link_to(crop.name, crop) %></td>
        <td><%= calculate_start_date(crop) %></td>
        <td><%= crop.transplant %></td>
        <td><%= calculate_transplant_date(crop) %></td>
        <td><%= location_link(crop.location) %></td>
        <td><%= link_to 'Edit', edit_crop_path(crop) %></td>
        <td><%= link_to 'Destroy', crop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

