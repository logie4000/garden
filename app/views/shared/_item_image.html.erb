
<div id="portrait">
  <% unless (img.nil?) %>
    <%= image_tag(img.normal.url) %>
  <% end %>
</div>

<%= form_for [obj, Image.new], :html => {id: 'picture-dropzone', class: :dropzone, multipart: true} do |f| %>
  <%= f.hidden_field :file %>
  <%= f.hidden_field :object_id, :value => obj[:id] %>
  <%= f.hidden_field :object_type, :value => obj.class %>
<% end %>
