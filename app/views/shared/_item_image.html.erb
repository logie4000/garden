
<%= javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token}';$(function() {addPortraitDropzoneById('#{images_path}', 'portrait', {'authenticity_token': AUTH_TOKEN, 'image[object_id]': '#{obj[:id]}', 'image[object_type]': '#{obj.class}'}, '#{set_portrait_crop_path}', false);})" %>

<div id="portrait">
  <% unless (img.nil?) %>
    <%= image_tag(img.file.normal.url) %>
  <% end %>
</div>
