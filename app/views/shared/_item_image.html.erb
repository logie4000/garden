<% if (obj[:id]) %>
<%= javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token}';$(function() {addPortraitDropzoneById('#{images_path}', 'portrait', {'authenticity_token': AUTH_TOKEN, 'image[object_id]': '#{obj[:id]}', 'image[object_type]': '#{obj.class}'}, '#{set_portrait_crop_path(obj)}', false);})" %>
<% end %>

  <% unless (img.nil?) %>
    <%= image_tag(img.file.normal.url, :name => 'portrait') unless (img.file.blank?) %>
  <% end %>
