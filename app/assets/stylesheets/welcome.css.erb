#title {
  background-color: #e0ffe0;
  font-family: "courier new";
  font-size: 2em;
  font-weight: 900;
  position:absolute;
  top:0px;
  left:0px;
  height:100%;
  width:100%;
}

#title-body { 
  background: url(<%= TITLE_IMAGE %>);
  background-repeat:no-repeat; 
  background-size:cover;
  position:absolute;
  top:75px;
  left:0px;
  width:100%;
  height:300px;
  overflow: hidden;
}

.title-text {
  text-align: center;
  position:fixed;
  top:380px;
  left:0px;
  width:100%;
}

.title-image {
  text-align: center;
   
}

.title-links {
  text-align: center;
  font-family: "courier new";
  font-size: 1em;
